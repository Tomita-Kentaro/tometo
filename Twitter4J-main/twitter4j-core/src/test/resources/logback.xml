<configuration>

    <appender name="STDOUT"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{HH:mm:ss} [%thread] %-5level %logger %msg%n</pattern>
        </layout>
    </appender>
    <root>
        <level value="debug"/>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>